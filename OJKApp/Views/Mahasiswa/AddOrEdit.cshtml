@using static OJKApp.Models.MahasiswaViewModel
@model OJKApp.Models.MahasiswaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MahasiswaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nim" class="control-label"></label>
                <input asp-for="nim" class="form-control" />
                <span asp-validation-for="nim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="namaMhs" class="control-label"></label>
                <input asp-for="namaMhs" class="form-control" />
                <span asp-validation-for="namaMhs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tglLahir" class="control-label"></label>
                <input asp-for="tglLahir" class="form-control" />
                <span asp-validation-for="tglLahir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="alamat" class="control-label"></label>
                <input asp-for="alamat" class="form-control" />
                <span asp-validation-for="alamat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jenisKelamin" class="control-label"></label>
                <select asp-for="jenisKelamin" class="form-control">
                    <option value="@JenisKelaminEnum.Perempuan">Perempuan</option>
                    <option value="@JenisKelaminEnum.LakiLaki">Laki-Laki</option>
                </select>
                <span asp-validation-for="jenisKelamin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
