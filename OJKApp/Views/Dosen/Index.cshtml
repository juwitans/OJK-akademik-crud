@model System.Data.DataTable

@{
    ViewData["Title"] = "Daftar Dosen";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<button>
    <a asp-action="AddOrEdit">Create New</a>
</button>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                NIP
            </th>
            <th>
                Nama Dosen
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["nip"]
                </td>
                <td>
                    @Model.Rows[i]["namaDosen"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["id"]">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["id"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>